<div class='control-group nested-fields'>
  <div class="controls">
    <%= f.association :pais,
      collection: Sip::Pais.where(fechadeshabilitacion: nil).order(:nombre),
      label: "País",
      label_method: :nombre,
      value_method: :id 
    %>
    <%= f.association :departamento,
      collection: (Sip::Departamento.where(id_pais: f.object.id_pais, 
                                                 fechadeshabilitacion: nil).order(:nombre)),
      label: "Estado/Departamento",
      label_method: :nombre,
      value_method: :id 
    %>
    <%= f.association :municipio,
      collection: (Sip::Municipio.where(
        id_departamento: f.object.id_departamento,
        fechadeshabilitacion: nil).order(:nombre)),
      label: "Municipio",
      label_method: :nombre,
      value_method: :id 
    %>
    <%= f.association :clase,
      collection: (Sip::Clase.where(
        id_municipio: f.object.id_municipio,
        fechadeshabilitacion: nil).order(:nombre)),
      label: "Centro Poblado",
      label_method: :nombre,
      value_method: :id,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Elegir centro poblado exacto de la lista de despliegue'}
    %>
    <%= f.input :lugar,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Lugar exacto en que se produjo el hecho victimizante. Registre el barrio en caso de ubicación urbana y la vereda en caso rural'}
    %>
      <%= f.input :sitio,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Sitio exacto en que se produjo el hecho victimizante. Registre dirección de casa en caso urbano y de la finca en caso rural'}
    %>
      <%= f.input :latitud%>
      <%= f.input :longitud%>
      <%= f.association :tsitio,
        collection: Sip::Tsitio.where(fechadeshabilitacion: nil).order(:nombre),
        label: "Tipo de Sitio",
        label_method: :nombre, 
        value_method: :id,
        include_blank: false,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Seleccione si el sitio registrado corresponde a urbano o rural'}
      %>
      <%= f.input :id, as: :hidden %>
        <%= link_to_remove_association "Eliminar " + 
          Sip::Ubicacion.human_attribute_name("Ubicacion"), f, 
          {:class => 'btn-danger', :'data-existing' => 'true'} 
        %> 
      </div>
</div>
