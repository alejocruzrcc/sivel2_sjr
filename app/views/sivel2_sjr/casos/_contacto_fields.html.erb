<%= f.simple_fields_for :persona do |p| %>
	<%= render 'sivel2_gen/casos/persona_fields', :f => p %>
<% end %>
<%= f.association :profesion,
	collection: Sivel2Gen::Profesion.habilitados,
	include_blank: false,
	label: "Profesión",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :rangoedad,
	collection: Sivel2Gen::Rangoedad.habilitados,
	include_blank: false,
	label: "Rango de Edad",
	label_method: :rango, 
	value_method: :id 
%>
<%= f.association :etnia,
	collection: Sivel2Gen::Etnia.habilitados,
	include_blank: false,
	label: "Etnia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :iglesia,
	collection: Sivel2Gen::Iglesia.habilitados,
	include_blank: false,
	label: "Religión/Iglesia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.input(:orientacionsexual, collection: [
						[:HETEROSEXUAL, :H], [:LESBIANA, :L], [:GAY, :G], 
						[:BISEXUAL, :B], [:TRANSEXUAL, :T] 
], 
	label: "Orientación Sexual",
	include_blank: false ) 
%>
<%= f.input :id, as: :hidden %>

<%= f.simple_fields_for :victimasjr do |s| %>
	<%= s.association :estadocivil,
		collection: Sivel2Gen::Estadocivil.habilitados,
		include_blank: false,
		label: "Estado Civil",
		label_method: :nombre, 
		value_method: :id 
	%>
	<%= s.association :rolfamilia,
		collection: Sivel2Sjr::Rolfamilia.habilitados,
		include_blank: false,
		label: "Rol en Familia",
		label_method: :nombre, 
		value_method: :id 
	%>
	<%= s.association :maternidad,
		collection: Sivel2Gen::Maternidad.habilitados,
		label: "Maternidad",
		label_method: :nombre, 
		value_method: :id 
  %>	
  <%= s.input(:ndiscapacidad, collection: [
              ['FÍSICA', 'FÍSICA'], 
              ['PSÍQUICA', 'PSÍQUICA'], 
              ['SENSORIAL', 'SENSORIAL'] 
    ], 
    label: "Discapacidad") 
  %>
  <%= s.input :enfermedad %>
	<%= s.association :actividadoficio,
		collection: Sivel2Gen::Actividadoficio.habilitados,
		include_blank: false,
		label: "Actividad/Oficio actual",
		label_method: :nombre, 
    value_method: :id,
    wrapper_html: { style: "padding-bottom: 18px;" }
	%>
	<%= s.association :escolaridad,
		collection: Sivel2Gen::Escolaridad.habilitados,
		include_blank: false,
		label: "Nivel Escolar",
		label_method: :nombre, 
		value_method: :id
  %>
  <%= s.input :asisteescuela, 
    label: "Asiste a Escuela",
    wrapper_html: { class: "span11 offset1" }  
  %>
	<%= s.input :id_victima, as: :hidden %>
<% end %>
